@model IEnumerable<acroyoga.it.admin.Models.Picture>

@{
    ViewBag.Title = "Pictures";
}

<div class="container-fluid">
    <div class="row">
        <h2>Immagini</h2>
        <p>
            @Html.ActionLink("Create New", "PictureDetail")
        </p>
        <table class="table table-striped table-hover table-condensed">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Image)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Video)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GalleryId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreateDate)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Image)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Video)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GalleryId)
                    </td>
                    <td>
                        @item.CreateDate.ToString("dd/MM/yyyy")
                    </td>
                    <td style="width:80px">
                        <a href="@Url.Action("PictureDetail", new { id = item.PictureId })" class="btn btn-default btn-xs"><span class='glyphicon glyphicon-pencil' aria-hidden='true'></span></a>
                        <a href="@Url.Action("PictureDelete", new { id = item.PictureId })" class="btn btn-default btn-xs"><span class='glyphicon glyphicon-trash' aria-hidden='true'></span></a>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>