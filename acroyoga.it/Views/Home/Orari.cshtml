            mapabano.setCenter(new google.maps.LatLng(45.350359, 11.780181));
        });

        function init() {
            var mapabanoOptions = {
                zoom: 16,
                center: new google.maps.LatLng(45.350359, 11.780181), // New York
                scrollwheel: false,
                draggable: false,
            };
            var mapabanoElement = document.getElementById('mapabano');
            mapabano = new google.maps.Map(mapabanoElement, mapabanoOptions);

            //var image = 'content/img/map-marker.png';
            var myLatLng = new google.maps.LatLng(45.350359, 11.780181);
            var beachMarker = new google.maps.Marker({
                position: myLatLng,
                map: mapabano,
                //icon: image
            });

            var maprubanoOptions = {
                zoom: 16,
                center: new google.maps.LatLng(45.420680, 11.797762), // New York
                scrollwheel: false,
                draggable: false,
            };
