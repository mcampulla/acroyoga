@model IEnumerable<acroyoga.it.admin.Models.Gallery>

@{
    ViewBag.Title = "Galleries";
}

<div class="container-fluid">
    <div class="row">
        <h2>Gallerie</h2>
        <p>
            @Html.ActionLink("Create New", "GalleryDetail")
        </p>
        <table class="table table-striped table-hover table-condensed">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td style="width:80px">
                        <a href="@Url.Action("GalleryDetail", new { id = item.GalleryId })" class="btn btn-default btn-xs"><span class='glyphicon glyphicon-pencil' aria-hidden='true'></span></a>
                        <a href="@Url.Action("GalleryDelete", new { id = item.GalleryId })" class="btn btn-default btn-xs"><span class='glyphicon glyphicon-trash' aria-hidden='true'></span></a>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>